<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
	<group id="default">
		<job name="fbc_import_reviews" instance="Magmodules\TheFeedbackCompany\Cron\ImportReviews" method="execute">
			<schedule>0 * * * *</schedule>
		</job>
		<job name="fbc_send_invitations" instance="Magmodules\TheFeedbackCompany\Cron\SendInvitations" method="execute">
			<schedule>0 0 * * *</schedule>
		</job>
	</group>
</config>
